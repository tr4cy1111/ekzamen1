<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobility.Views.LoadingPage"
             Shell.FlyoutItemIsVisible="False"
             Shell.NavBarIsVisible="False"
             Shell.NavBarHasShadow="False"
             Background="#e0c4b4">
    <ContentPage.Content>
        <StackLayout Margin="20,250,20,0" >
            <Button
                Margin="20"
                x:Name="loadingBtn"
                WidthRequest="100"
                HeightRequest="200"
                BorderColor="#983201"
                BackgroundColor="#DCC0B2"
                BorderWidth="5"
                Text="Finance"
                TextColor="#983201"
                FontSize="54"
                FontAttributes="Bold"
                Clicked="loadingBtn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>